struct Test {
	u8 field1;
	i16 field2;
	Test *next;
}

u8 *strcpy(u8 *dest, u8 *src) {
	while *src != 0 {
		*dest = *src;
		dest = dest + 1;
		src = src + 1;
	}
	# copy the null terminator as well
	*dest = *src;
	return dest;
}

u0 main() {
	u8 *thing = malloc(8);
	if thing == 0
		return 1;
	u8 *str = "hello";
	strcpy(thing, src);

	Test t;
	u8 a = sizeof t;
	t.field1 = 3;
	t.next = &t;
	# below line equivalent to: t.field2 = -t.field1
	t.next.field2 = -t.next.next.field1 + t.field2;
	return 0;
}

